generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  fullName String
  email    String @unique
  password String
  role     Role

 
  blockchainAddress String? @unique
  privateKeyHash    String? 

  medicalRecords MedicalRecord[]
  patientProfile PatientProfile?
  doctorProfile  DoctorProfile?
  staffProfile   StaffProfile?


  accessRequestsMade     AccessRequest[] @relation("RequesterRequests")
  accessRequestsReceived AccessRequest[] @relation("PatientRequests")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PatientProfile {
  id          String   @id @default(uuid())
  userId      String   @unique
  dateOfBirth DateTime
  gender      Gender
  bloodGroup  String
  phoneNumber String?
  address     String?

  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model MedicalRecord {
  id          String   @id @default(uuid())
  patientId   String
  patient     User     @relation(fields: [patientId], references: [id])
  title       String
  recordType  String
  description String?
  recordDate  DateTime
  ipfsHash    String   @unique
  encryption  String   @default("AES-128")
  fileSize    Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model DoctorProfile {
  id                String  @id @default(uuid())
  userId            String  @unique
  designation       String 
  specialization    String? 
  licenseNumber     String? @unique 
  medicalId         String? @unique 
  phoneNumber       String?
  department        String? 
  city              String?
  hospitalName      String? 
  yearsOfExperience Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}


model StaffProfile {
  id           String  @id @default(uuid())
  userId       String  @unique
  designation  String 
  employeeId   String? @unique
  phoneNumber  String?
  department   String? 
  city         String?
  hospitalName String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AccessRequest {
  id          String        @id @default(uuid())
  patientId   String 
  requesterId String 
  reason      String        @db.Text 
  status      RequestStatus @default(PENDING)
  transactionHash String? 
  blockchainEvent String? 

  requestedAt DateTime  @default(now())
  respondedAt DateTime? 

  patient   User @relation("PatientRequests", fields: [patientId], references: [id], onDelete: Cascade)
  requester User @relation("RequesterRequests", fields: [requesterId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([patientId, status])
  @@index([requesterId, status])
}

enum Role {
  PATIENT
  DOCTOR
  STAFF
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum RequestStatus {
  PENDING
  APPROVED
  DENIED
  EXPIRED
}
