generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  fullName String
  email    String @unique
  password String
  role     Role

  // Blockchain integration - backend-generated wallet
  blockchainAddress String? @unique
  privateKeyHash    String? // Encrypted private key for signing transactions

  medicalRecords MedicalRecord[]
  patientProfile PatientProfile?
  doctorProfile  DoctorProfile?
  staffProfile   StaffProfile?

  // Access requests made BY this user (as doctor/staff)
  accessRequestsMade     AccessRequest[] @relation("RequesterRequests")
  // Access requests received by this user (as patient)
  accessRequestsReceived AccessRequest[] @relation("PatientRequests")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PatientProfile {
  id          String   @id @default(uuid())
  userId      String   @unique
  dateOfBirth DateTime
  gender      Gender
  bloodGroup  String
  phoneNumber String?
  address     String?

  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model MedicalRecord {
  id          String   @id @default(uuid())
  patientId   String
  patient     User     @relation(fields: [patientId], references: [id])
  title       String
  recordType  String
  description String?
  recordDate  DateTime
  ipfsHash    String   @unique
  encryption  String   @default("AES-128")
  fileSize    Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// New model: Doctor profile information
model DoctorProfile {
  id                String  @id @default(uuid())
  userId            String  @unique
  designation       String // e.g., "Cardiologist", "Surgeon"
  specialization    String? // Medical specialty
  licenseNumber     String? @unique // Medical license/registration number
  medicalId         String? @unique // Hospital/clinic medical ID
  phoneNumber       String?
  department        String? // e.g., "Emergency", "Cardiology"
  city              String?
  hospitalName      String? // Current hospital/clinic
  yearsOfExperience Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// New model: Staff profile information
model StaffProfile {
  id           String  @id @default(uuid())
  userId       String  @unique
  designation  String // e.g., "Nurse", "Receptionist", "Admin"
  employeeId   String? @unique
  phoneNumber  String?
  department   String? // e.g., "Emergency", "Admission"
  city         String?
  hospitalName String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// New model: Access requests (OFF-CHAIN storage of request details)
model AccessRequest {
  id          String        @id @default(uuid())
  patientId   String // User ID of patient
  requesterId String // User ID of doctor/staff requesting access
  reason      String        @db.Text // Medical justification (OFF-CHAIN for privacy)
  status      RequestStatus @default(PENDING)

  // Blockchain linkage
  transactionHash String? // Hash of blockchain transaction (if approved/denied)
  blockchainEvent String? // Event name: "AccessRequested", "AccessGranted", etc.

  requestedAt DateTime  @default(now())
  respondedAt DateTime? // When patient approved/denied

  patient   User @relation("PatientRequests", fields: [patientId], references: [id], onDelete: Cascade)
  requester User @relation("RequesterRequests", fields: [requesterId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([patientId, status])
  @@index([requesterId, status])
}

enum Role {
  PATIENT
  DOCTOR
  STAFF
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum RequestStatus {
  PENDING
  APPROVED
  DENIED
  EXPIRED
}
